        // Afficher la deuxi√®me carte si l'√©tape 1 est d√©j√† valid√©e
    if (sessionStorage.getItem('step1_completed') === 'true' && professionalSection) {
        professionalSection.style.display = 'block';
    }
    }
    // ‚úÖ GESTION FICHIER 1 : Document d'identit√©
    const inputFile1 = document.getElementById('{{ form.documentIdentite.vars.id }}');
    const fileNameSpan1 = document.getElementById('file-name');
    if (inputFile1 && fileNameSpan1) {
        inputFile1.addEventListener('change', function () {
            const file = inputFile1.files[0];
            if (file) {
                fileNameSpan1.textContent = file.name;
                console.log('‚úÖ Fichier 1 s√©lectionn√©:', file.name);
            } else {
                fileNameSpan1.textContent = "Aucun fichier s√©lectionn√©";
            }
        });
        console.log('‚úÖ Event listener fichier 1 ajout√©');
    }
    // ‚úÖ GESTION FICHIER 2 : Carte Attestation
    {% if specificForm is not null %}
    const inputFile2 = document.getElementById('{{ specificForm.CarteAttestation.vars.id }}');
    const fileNameSpan2 = document.getElementById('file-name-{{ specificForm.CarteAttestation.vars.id }}');
    if (inputFile2 && fileNameSpan2) {
        inputFile2.addEventListener('change', function () {
            const file = inputFile2.files[0];
            if (file) {
                fileNameSpan2.textContent = file.name;
                console.log('‚úÖ Fichier 2 s√©lectionn√©:', file.name);
            } else {
                fileNameSpan2.textContent = "Aucun fichier s√©lectionn√©";
            }
        });
        console.log('‚úÖ Event listener fichier 2 ajout√©');
    } else {
        console.log('‚ùå √âl√©ments fichier 2 non trouv√©s');
    }
    {% endif %}
    // ‚úÖ M√âTHODE UNIVERSELLE pour tous les futurs fichiers
    document.querySelectorAll('input[type="file"]').forEach(function(input, index) {
        input.addEventListener('change', function() {
            const file = input.files[0];
            const targetId = input.getAttribute('data-upload-target');
            let fileNameSpan = null;
            // Chercher le span correspondant
            if (targetId) {
                fileNameSpan = document.getElementById(targetId);
            } else {
                // Chercher le span suivant
                fileNameSpan = input.closest('.custom-file-upload').querySelector('.file-name-display');
            }
            if (fileNameSpan) {
                if (file) {
                    fileNameSpan.textContent = file.name;
                    console.log(‚úÖ Fichier ${index + 1} s√©lectionn√©:, file.name);
                } else {
                    fileNameSpan.textContent = "Aucun fichier s√©lectionn√©";
                }
            }
        });
    });
});
// Gestion du scroll vers l'√©tape 2
document.addEventListener('DOMContentLoaded', function() {
    // V√©rifie si on vient de valider l'√©tape 1
    {% if form.vars.submitted and form.vars.valid %}
        scrollToStep2();
    {% endif %}

    // Gestion du clic sur "Suivant"
    const nextButton = document.querySelector('button[name="next_step"]');
    if (nextButton) {
        nextButton.addEventListener('click', function() {
            // Stocke en session que l'√©tape 1 est compl√®te
            sessionStorage.setItem('step1_completed', 'true');
        });
    }
    function scrollToStep2() {
        const step2Section = document.getElementById('step2-section');
        if (step2Section) {
            // Scroll en douceur avec d√©calage pour la barre de navigation
            window.scrollTo({
                top: step2Section.offsetTop - 100,
                behavior: 'smooth'
            });
            
            // Marquage visuel (optionnel)
            step2Section.style.boxShadow = '0 0 0 2px #07702C';
            setTimeout(() => {
                step2Section.style.boxShadow = 'none';
            }, 2000);
        }
    }
});
document.addEventListener('DOMContentLoaded', function() {
    const inputFile = document.getElementById('{{ form.documentIdentite.vars.id }}');
    const fileNameSpan = document.getElementById('file-name');
    
    // Restaure le nom du fichier depuis la session au chargement
    {% if session.get('document_uploaded') %}
    fileNameSpan.textContent = '{{ session.get("document_uploaded")["original"] }}';
    {% endif %}
    
    // Gestion des nouveaux fichiers
    if (inputFile) {
        inputFile.addEventListener('change', function() {
            if (this.files.length > 0) {
                fileNameSpan.textContent = this.files[0].name;
            } else {
                fileNameSpan.textContent = "{% if session.get('document_uploaded') %}{{ session.get('document_uploaded')['original'] }}{% else %}Aucun fichier s√©lectionn√©{% endif %}";
            }
        });
    }
});
</script>

