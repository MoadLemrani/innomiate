        try {
            this.submitBtn.disabled = loading;
            
            if (loading) {
                if (this.btnText) this.btnText.textContent = 'Envoi en cours...';
                if (this.btnIcon) this.btnIcon.style.display = 'none';
                if (this.spinner) this.spinner.style.display = 'block';
