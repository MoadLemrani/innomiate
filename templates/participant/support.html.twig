                if (this.btnIcon) this.btnIcon.style.display = 'block';
                if (this.spinner) this.spinner.style.display = 'none';
            }
        } catch (error) {
            ErrorHandler.logError(error, 'ContactFormManager.setLoadingState');
        }
    }
}

