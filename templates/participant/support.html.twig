// =================================
// ERROR HANDLING UTILITY CLASS
// =================================
class ErrorHandler {
    static showAlert(message, type = 'error', duration = 5000) {
        const alert = document.getElementById('formAlert');
        const alertMessage = alert.querySelector('.alert-message');
        const alertIcon = alert.querySelector('.alert-icon');
        
        // Set alert content
        alertMessage.textContent = message;
        alert.className = `form-alert ${type} show`;
        
        // Set appropriate icon
        const icons = {
            success: '‚úÖ',
            error: '‚ùå',
            warning: '‚ö†Ô∏è',
            info: '‚ÑπÔ∏è'
        };
        alertIcon.textContent = icons[type] || '‚ùå';
        
        // Auto hide after duration
        if (duration > 0) {
            setTimeout(() => {
                alert.classList.remove('show');
            }, duration);
        }
    }
    
    static hideAlert() {
        const alert = document.getElementById('formAlert');
        alert.classList.remove('show');
    }
    
    static validateField(field, rules = {}) {
        const value = field.value.trim();
        const fieldGroup = field.closest('.form-group');
        
        fieldGroup.classList.remove('error');
        
        // Required validation
        if (rules.required && !value) {
            this.setFieldError(fieldGroup, 'Ce champ est requis');
            return false;
        }
        
        // Email validation
        if (rules.email && value) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(value)) {
                this.setFieldError(fieldGroup, 'Veuillez entrer une adresse email valide');
                return false;
            }
        }
        
        // Minimum length validation
        if (rules.minLength && value.length < rules.minLength) {
            this.setFieldError(fieldGroup, `Minimum ${rules.minLength} caract√®res requis`);
            return false;
        }
        
        return true;
    }
    
    static setFieldError(fieldGroup, message) {
        fieldGroup.classList.add('error');
        const errorEl = fieldGroup.querySelector('.error-message');
        if (errorEl) {
            errorEl.textContent = message;
        }
    }
    
    static logError(error, context = '') {
        console.error(`[${context}] Error:`, error);
    }
}

