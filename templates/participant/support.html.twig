// THEME MANAGEMENT
// =================================
class ThemeManager {
    constructor() {
        this.themeToggle = document.getElementById('darkModeToggle');
        this.init();
    }
    
    init() {
        try {
            // Initialize from localStorage or default to dark
            const savedTheme = localStorage.getItem('theme') || 'dark';
            this.setTheme(savedTheme);
            
            // Add event listener
            this.themeToggle?.addEventListener('click', () => this.toggleTheme());
            
        } catch (error) {
            ErrorHandler.logError(error, 'ThemeManager.init');
            // Fallback to dark theme
            this.setTheme('dark');
        }
    }
    
    setTheme(theme) {
        try {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
            this.updateToggleIcons(theme);
        } catch (error) {
            ErrorHandler.logError(error, 'ThemeManager.setTheme');
        }
    }
    
    toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        this.setTheme(newTheme);
    }
    
    updateToggleIcons(theme) {
        if (!this.themeToggle) return;
        
        const sunIcon = this.themeToggle.querySelector('.sun-icon');
        const moonIcon = this.themeToggle.querySelector('.moon-icon');
        
        if (theme === 'dark') {
            sunIcon.style.display = 'block';
            moonIcon.style.display = 'none';
        } else {
            sunIcon.style.display = 'none';
            moonIcon.style.display = 'block';
        }
    }
}

// =================================
// SIDEBAR MANAGEMENT
// =================================
class SidebarManager {
    constructor() {
        this.sidebarToggle = document.getElementById('sidebarToggle');
        this.sidebar = document.getElementById('sidebar');
        this.overlay = document.getElementById('sidebarOverlay');
        this.arrowRightIcon = this.sidebarToggle?.querySelector('.arrow-right-icon');
        this.arrowLeftIcon = this.sidebarToggle?.querySelector('.arrow-left-icon');
        this.init();
    }
    
    init() {
        try {
            this.sidebarToggle?.addEventListener('click', (e) => this.handleToggle(e));
            this.overlay?.addEventListener('click', (e) => this.handleOverlayClick(e));
            document.addEventListener('keydown', (e) => this.handleEscape(e));
            window.addEventListener('resize', () => this.handleResize());
        } catch (error) {
            ErrorHandler.logError(error, 'SidebarManager.init');
        }
    }
    
    isMobileView() {
        return window.matchMedia('(max-width: 992px)').matches;
    }
    
    handleToggle(e) {
        e.stopPropagation();
        if (this.isMobileView()) {
            if (this.sidebar?.classList.contains('mobile-open')) {
                this.closeSidebar();
            } else {
                this.openSidebar();
            }
        }
    }
    
    handleOverlayClick(e) {
        e.stopPropagation();
        if (this.isMobileView()) {
            this.closeSidebar();
        }
    }
    
    handleEscape(e) {
        if (e.key === 'Escape' && this.isMobileView() && 
            this.sidebar?.classList.contains('mobile-open')) {
            this.closeSidebar();
        }
    }
    
    handleResize() {
        if (!this.isMobileView()) {
            this.closeSidebar();
        }
    }
    
    openSidebar() {
        try {
            this.sidebar?.classList.add('mobile-open');
            this.overlay?.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            if (this.arrowRightIcon) this.arrowRightIcon.style.display = 'none';
            if (this.arrowLeftIcon) this.arrowLeftIcon.style.display = 'block';
        } catch (error) {
            ErrorHandler.logError(error, 'SidebarManager.openSidebar');
        }
    }
    
    closeSidebar() {
        try {
            this.sidebar?.classList.remove('mobile-open');
            this.overlay?.classList.remove('active');
            document.body.style.overflow = '';
            
            if (this.arrowRightIcon) this.arrowRightIcon.style.display = 'block';
            if (this.arrowLeftIcon) this.arrowLeftIcon.style.display = 'none';
        } catch (error) {
            ErrorHandler.logError(error, 'SidebarManager.closeSidebar');
        }
    }
}

