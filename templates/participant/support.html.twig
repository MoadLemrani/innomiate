    handleError(error) {
        let message = 'Une erreur inattendue est survenue. Veuillez r√©essayer.';
        
        if (error.name === 'TypeError' && error.message.includes('fetch')) {
            message = 'Probl√®me de connexion. V√©rifiez votre connexion internet et r√©essayez.';
        } else if (error.message.includes('400')) {
            message = 'Donn√©es du formulaire invalides. Veuillez v√©rifier vos informations.';
        } else if (error.message.includes('429')) {
            message = 'Trop de tentatives. Veuillez attendre quelques minutes avant de r√©essayer.';
        } else if (error.message.includes('500')) {
            message = 'Erreur du serveur. Veuillez r√©essayer plus tard.';
        }
        
        ErrorHandler.showAlert(message, 'error', 10000);
    }
    
    setLoadingState(loading) {
