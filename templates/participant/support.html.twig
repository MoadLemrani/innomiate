            if (response.ok) {
                const result = await response.json();
                this.handleSuccess();
            } else {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            
        } catch (error) {
            ErrorHandler.logError(error, 'ContactFormManager.handleSubmit');
            this.handleError(error);
        } finally {
            this.setLoadingState(false);
        }
    }
    
    handleSuccess() {
