@media (max-width: 480px) {
    .invitation-item {
        border-radius: 12px;
        margin: 0;
        width: 100%;
    }
    
    .invitations-list {
        width: 100%;
        margin: 0;
    }
    
    .invitation-actions {
        flex-direction: column;
    }
    
    .invitation-actions .btn {
        width: 100%;
        margin: 0;
    }
    
    .sender-name {
        font-size: 15px;
    }
    
    .invitation-message {
        font-size: 14px;
    }
    
    .invitation-meta {
        font-size: 11px;
    }
}
    </style>

