{% block body %}
    <style>
        /* =================================
           CSS VARIABLES & ROOT SETTINGS
           ================================= */
        :root {
            --primary-red: #ff3e5f;
            --primary-green: #2ecc71;
            --primary-accent: #50e73cff;
            --primary-white: #ffffff;
            --dark-bg: #0f1621;
            --glass-bg: rgba(255, 255, 255, 0.05);
            --text-light: #f0f0f0;
            --text-dim: #b0b0b0;
            --shadow-neon-red: 0 0 10px rgba(255, 62, 95, 0.3);
            --shadow-neon-green: 0 0 10px rgba(46, 204, 113, 0.3);
            --shadow-neon-accent: 0 0 10px rgba(231, 76, 60, 0.3);
            --shadow-color: rgba(0, 0, 0, 0.3);
            --card-background: rgba(255, 255, 255, 0.1);
            --transition: all 0.3s ease;
        }

        :root[data-theme="light"] {
            --primary-red: #e74c3c;
            --primary-green: #27ae60;
            --primary-accent: #2bc02bff;
            --primary-white: #000000;
            --dark-bg: #f8f9fa;
            --glass-bg: rgba(255, 255, 255, 0.9);
            --text-light: #2c3e50;
            --text-dim: #6c757d;
            --shadow-neon-red: 0 0 10px rgba(231, 76, 60, 0.2);
            --shadow-neon-green: 0 0 10px rgba(39, 174, 96, 0.2);
            --shadow-neon-accent: 0 0 10px rgba(192, 57, 43, 0.2);
            --shadow-color: rgba(0, 0, 0, 0.1);
            --card-background: rgba(255, 255, 255, 0.95);
        }

        /* =================================
           THEME TOGGLE
           ================================= */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            background: var(--card-background);
            border: 2px solid var(--text-light);
            border-radius: 50px;
            padding: 10px;
            cursor: pointer;
            box-shadow: 0 4px 15px var(--shadow-color);
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .theme-toggle:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px var(--shadow-color);
        }

        .theme-toggle .sun-icon,
        .theme-toggle .moon-icon {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .theme-toggle svg {
            width: 24px;
            height: 24px;
            display: block;
            color: currentColor;
            transition: var(--transition);
        }

        .theme-toggle .sun-icon svg {
            color: #ffa500;
        }

        .theme-toggle .moon-icon svg {
            color: #4cc9f0;
        }

        /* =================================
           ANIMATIONS & KEYFRAMES
           ================================= */
        @keyframes pulse {
            0% { transform: scale(0.8); opacity: 0.5; }
            100% { transform: scale(1.2); opacity: 0.8; }
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-5px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateX(20px); }
            to { opacity: 1; transform: translateX(0); }
        }

        @keyframes textShimmer {
            0% { background-position: -200px 0; }
            100% { background-position: 200px 0; }
        }

        @keyframes floatUp {
            0% { transform: translateY(0); opacity: 0.7; }
            50% { transform: translateY(-3px); opacity: 1; }
            100% { transform: translateY(0); opacity: 0.7; }
        }

        /* =================================
           MAIN LAYOUT COMPONENTS
           ================================= */
        .team-container {
            display: flex;
            min-height: 100vh;
            padding: 2rem;
            gap: 2rem;
        }

        .team-illustration {
            flex: 1;
            background: linear-gradient(135deg, rgba(255, 62, 95, 0.1) 0%, rgba(46, 204, 113, 0.1) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            position: relative;
            overflow: hidden;
            border-radius: 16px;
        }

        .team-illustration::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 62, 95, 0.15) 0%, transparent 70%);
            animation: pulse 15s infinite alternate;
        }

        .team-illustration::after {
            content: "";
            position: absolute;
            bottom: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(46, 204, 113, 0.15) 0%, transparent 70%);
            animation: pulse 15s infinite alternate-reverse;
        }

        .team-illustration-content {
            position: relative;
            z-index: 2;
            text-align: center;
            max-width: 500px;
        }

        .team-illustration h2 {
            font-size: 32px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-green) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .team-illustration p {
            color: var(--text-dim);
            font-size: 16px;
            line-height: 1.6;
        }

        /* Light theme adjustments for illustration */
        :root[data-theme="light"] .team-illustration {
            background: linear-gradient(135deg, rgba(231, 76, 60, 0.25) 0%, rgba(39, 174, 96, 0.25) 100%);
        }

        :root[data-theme="light"] .team-illustration::before {
            background: radial-gradient(circle, rgba(231, 76, 60, 0.2) 0%, transparent 70%);
        }

        :root[data-theme="light"] .team-illustration::after {
            background: radial-gradient(circle, rgba(39, 174, 96, 0.2) 0%, transparent 70%);
        }

        .team-form-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .team-form {
            width: 100%;
            max-width: 600px;
            background: var(--card-background);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 10px 30px var(--shadow-color);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Light theme form adjustments */
        :root[data-theme="light"] .team-form {
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        /* =================================
           LOGO & BRANDING
           ================================= */
        .logo {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            width: 64px;
            height: 64px;
            margin-right: 12px;
            border-radius: 6px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .logo-text {
            font-size: 24px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-green) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        /* =================================
           TYPOGRAPHY
           ================================= */
        .team-title {
            font-size: 28px;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--text-light);
        }

        .team-subtitle {
            color: var(--text-dim);
            margin-bottom: 30px;
            font-size: 16px;
        }

        /* =================================
           TAB NAVIGATION
           ================================= */
        .team-tabs {
            display: flex;
            margin-bottom: 2rem;
            border-radius: 12px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        :root[data-theme="light"] .team-tabs {
            background: rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .team-tab {
            flex: 1;
            padding: 1rem;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            font-weight: 500;
            color: var(--text-dim);
        }

        .team-tab.active {
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-accent) 100%);
            color: white;
            font-weight: 600;
        }

        .team-tab:hover:not(.active) {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text-light);
        }

        :root[data-theme="light"] .team-tab:hover:not(.active) {
            background: rgba(0, 0, 0, 0.05);
        }

        /* =================================
           FORM STYLES
           ================================= */
        .form-group {
            margin-bottom: 1.5rem;
            animation: fadeIn 0.5s ease forwards;
        }

        .form-group:nth-child(1) { animation-delay: 0.1s; }
        .form-group:nth-child(2) { animation-delay: 0.2s; }
        .form-group:nth-child(3) { animation-delay: 0.3s; }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-light);
        }

        input, textarea, select {
            width: 100%;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            font-family: inherit;
            font-size: 1rem;
            color: var(--text-light);
            transition: var(--transition);
            box-sizing: border-box;
        }

        input::placeholder, textarea::placeholder {
            color: var(--text-dim);
            opacity: 0.7;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            border-color: var(--primary-green);
            box-shadow: 0 0 0 3px rgba(62, 255, 78, 0.2);
        }

        textarea {
            min-height: 120px;
            resize: vertical;
        }

        /* Light theme form adjustments */
        :root[data-theme="light"] input,
        :root[data-theme="light"] textarea,
        :root[data-theme="light"] select {
            background: rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.15);
            color: var(--text-light);
        }

        :root[data-theme="light"] input:focus,
        :root[data-theme="light"] textarea:focus,
        :root[data-theme="light"] select:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 3px rgba(60, 231, 69, 0.2);
        }

        /* =================================
           BUTTON STYLES
           ================================= */
        .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-accent) 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            text-align: center;
            text-decoration: none;
        }

        .btn:hover {
            background: linear-gradient(135deg, #28ff5eff 0%, #4deb5aff 100%);
            transform: translateY(-2px);
            box-shadow: var(--shadow-neon-green);
            color: white;
            text-decoration: none;
        }

        .btn-block {
            display: block;
            width: 100%;
        }

        /* =================================
           HELP TEXT & MESSAGES
           ================================= */
        .help-text {
            font-size: 0.85rem;
            color: var(--text-dim);
            margin-top: 0.5rem;
        }

        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            animation: fadeIn 0.5s ease;
        }

        .alert-success {
            background-color: rgba(46, 204, 113, 0.1);
            border: 1px solid var(--primary-green);
            color: var(--primary-green);
        }

        .alert-warning {
            background-color: rgba(255, 193, 7, 0.1);
            border: 1px solid #ffc107;
            color: #ffc107;
        }

        .alert-error {
            background-color: rgba(255, 62, 95, 0.1);
            border: 1px solid var(--primary-red);
            color: var(--primary-red);
        }

        .hidden {
            display: none;
        }

        /* =================================
           TAB CONTENT
           ================================= */
        .tab-content {
            display: none;
            animation: slideIn 0.5s ease;
        }

        .tab-content.active {
            display: block;
        }

        /* =================================
           ENHANCED OPTION DESCRIPTIONS
           ================================= */
        .option-description {
            margin-bottom: 2rem;
            position: relative;
            padding: 1.5rem;
            border-radius: 12px;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0.08) 100%);
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            overflow: hidden;
            transition: var(--transition);
        }

        :root[data-theme="light"] .option-description {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.02) 0%, rgba(0, 0, 0, 0.05) 100%);
            border: 1px solid rgba(0, 0, 0, 0.08);
        }

        .option-description::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.8s ease;
        }

        .option-description:hover::before {
            left: 100%;
        }

        .option-description:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            border-color: rgba(255, 255, 255, 0.2);
        }

        :root[data-theme="light"] .option-description:hover {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            border-color: rgba(0, 0, 0, 0.15);
        }

        .option-description p {
            margin: 0;
            line-height: 1.7;
            font-size: 15px;
            color: var(--text-light);
            font-weight: 400;
            letter-spacing: 0.3px;
            position: relative;
            z-index: 1;
        }

        /* Special styling for key phrases */
        .option-description .highlight {
            position: relative;
            font-weight: 600;
            color: var(--primary-accent);
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-accent) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            display: inline;
        }

        .option-description .highlight::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-accent) 100%);
            transition: width 0.3s ease;
        }

        .option-description:hover .highlight::after {
            width: 100%;
        }

        /* Animated emphasis for strong text */
        .option-description strong {
            font-weight: 700;
            color: var(--text-light);
            position: relative;
            animation: floatUp 2s ease-in-out infinite;
            animation-delay: calc(var(--delay, 0) * 0.2s);
        }

        /* Create different delays for multiple strong elements */
        .option-description strong:nth-of-type(1) { --delay: 0; }
        .option-description strong:nth-of-type(2) { --delay: 1; }
        .option-description strong:nth-of-type(3) { --delay: 2; }

        /* Enhanced text with subtle glow effect */
        .option-description .glow-text {
            color: var(--primary-green);
            text-shadow: 0 0 10px rgba(46, 204, 113, 0.3);
            font-weight: 500;
        }

        /* Playful emoji-like decorations */
        .option-description .emoji {
            display: inline-block;
            font-size: 1.2em;
            margin: 0 2px;
            animation: floatUp 1.5s ease-in-out infinite;
            animation-delay: calc(var(--emoji-delay, 0) * 0.3s);
        }

        .option-description .emoji:nth-of-type(1) { --emoji-delay: 0; }
        .option-description .emoji:nth-of-type(2) { --emoji-delay: 1; }
        .option-description .emoji:nth-of-type(3) { --emoji-delay: 2; }

        /* Tab-specific styling */
        #create-tab .option-description {
            border-left: 3px solid var(--primary-green);
        }

        #join-tab .option-description {
            border-left: 3px solid var(--primary-accent);
        }

        #pitch-tab .option-description {
            border-left: 3px solid #2cf14dff;
        }

        /* =================================
           RESPONSIVE ADJUSTMENTS
           ================================= */
        @media (max-width: 992px) {
            .team-container {
                flex-direction: column;
                padding: 1rem;
                gap: 2rem;
            }

            .team-illustration {
                padding: 2rem;
            }

            .team-illustration::before,
            .team-illustration::after {
                display: none;
            }

            .team-form {
                max-width: 100%;
            }

            .option-description {
                padding: 1.25rem;
            }
        }

        @media (max-width: 576px) {
            .team-tabs {
                flex-direction: column;
            }

            .team-tab {
                padding: 0.75rem;
            }

            .logo {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .logo-icon {
                margin-right: 0;
                margin-bottom: 10px;
            }

            .logo-text {
                font-size: 20px;
            }

            .team-title {
                font-size: 22px;
                text-align: center;
            }

            .team-subtitle {
                text-align: center;
                font-size: 14px;
            }

            .theme-toggle {
                top: 10px;
                right: 10px;
                padding: 8px;
            }

            .theme-toggle svg {
                width: 20px;
                height: 20px;
            }

            .option-description {
                padding: 1rem;
            }

            .option-description p {
                font-size: 14px;
            }
        }
    </style>

