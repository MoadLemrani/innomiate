{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<div id="register-page" class="container">
		<div class="auth-container">
			<div class="auth-illustration">
				<i class="fas fa-brain" style="font-size: 120px; color: rgba(255,255,255,0.1); z-index: 1;"></i>
				<div style="position: absolute; z-index: 2; text-align: center;">
					<h2 style="font-size: 32px; margin-bottom: 20px; background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-green) 100%); -webkit-background-clip: text; background-clip: text; color: transparent;">REJOIGNEZ LA COMMUNAUTÉ</h2>
					<p style="color: var(--text-dim); max-width: 400px;">Collaborez, rivalisez et créez avec des passionnés d’IA</p>
				</div>
			</div>
			<div class="auth-form-container">
				<div class="auth-form">
					<div class="logo">
						<span class="logo-icon">
							<i class="fas fa-robot"></i>
						</span>
						<span class="logo-text">MIA</span>
					</div>
					<h1 class="auth-title">Créer un compte</h1>
					<p class="auth-subtitle">Rejoignez notre plateforme pour participer à des compétitions IA passionnantes</p>

					{% for flash_error in app.flashes('verify_email_error') %}
						<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
					{% endfor %}

					{{ form_start(registrationForm) }}

					{{ form_row(registrationForm.firstName, {
						'attr': {
							'class': 'form-control',
							'placeholder': 'Prénom'
						},
						'label_attr': {
							'class': 'form-label'
						}
					}) }}

					{{ form_row(registrationForm.lastName, {
						'attr': {
							'class': 'form-control',
							'placeholder': 'Nom de famille'
						},
						'label_attr': {
							'class': 'form-label'
						}
					}) }}

					{{ form_row(registrationForm.email, {
						'attr': {
							'class': 'form-control',
							'placeholder': 'Adresse e-mail'
						},
						'label_attr': {
							'class': 'form-label'
						}
					}) }}

					{{ form_row(registrationForm.plainPassword, {
						'attr': {
							'class': 'form-control',
							'placeholder': 'Mot de passe'
						},
						'label_attr': {
							'class': 'form-label'
						}
					}) }}

					<button class="btn btn-primary w-100" type="submit">S’inscrire</button>

					{{ form_end(registrationForm) }}

					<div class="auth-footer" style="margin-top: 15px;">
						Vous avez déjà un compte ?
						<a href="#" class="auth-link" onclick="showPage('login-page')">Se connecter</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
