{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
  <style>
    .flash-error {
      background-color: rgba(255, 62, 95, 0.1);
      color: #d8000c;
      border: 1px solid #d8000c;
      padding: 10px;
      border-radius: 4px;
      margin-bottom: 1rem;
      list-style: none;
    }
    .flash-error li {
      margin-left: 0;
    }
  </style>

  <div id="register-page" class="container">
    <div class="auth-container">
      <div class="auth-illustration">
        <i class="fas fa-brain" style="font-size: 120px; color: rgba(255,255,255,0.1); z-index: 1;"></i>
        <div style="position: absolute; z-index: 2; text-align: center;">
          <h2 style="font-size: 32px; margin-bottom: 20px; background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-green) 100%);
                              -webkit-background-clip: text; background-clip: text; color: transparent;">
            REJOIGNEZ LA COMMUNAUTÉ
          </h2>
          <p style="color: var(--text-dim); max-width: 400px;">
            Collaborez, rivalisez et créez avec des passionnés d’IA
          </p>
        </div>
      </div>

      <div class="auth-form-container">
        <div class="auth-form">
          <div class="logo">
            <span class="logo-icon">
              <i class="fas fa-robot"></i>
            </span>
            <span class="logo-text">INNOMIATE</span>
          </div>

          <h1 class="auth-title">Créer un compte</h1>
          <p class="auth-subtitle">Rejoignez notre plateforme pour participer à des compétitions IA passionnantes</p>

          {% for flash_error in app.flashes('verify_email_error') %}
            <div class="flash-error" role="alert">{{ flash_error }}</div>
          {% endfor %}

          {{ form_start(registrationForm) }}

          {# First Name #}
          {{ form_label(registrationForm.firstName, null, {
              'attr': {
                  'class': 'form-label',
                  'style': 'display: block; margin: 8px 0; font-weight: 500; color: var(--text-light);'
              }
          }) }}
          {{ form_widget(registrationForm.firstName, {
              'attr': {'class': 'form-control', 'placeholder': 'Prénom'}
          }) }}
          {% if registrationForm.firstName.vars.errors|length > 0 %}
            <ul class="flash-error">
              {% for error in registrationForm.firstName.vars.errors %}
                <li>{{ error.message }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          {# Last Name #}
          {{ form_label(registrationForm.lastName, null, {
              'attr': {
                  'class': 'form-label',
                  'style': 'display: block; margin: 8px 0; font-weight: 500; color: var(--text-light);'
              }
          }) }}
          {{ form_widget(registrationForm.lastName, {
              'attr': {'class': 'form-control', 'placeholder': 'Nom de famille'}
          }) }}
          {% if registrationForm.lastName.vars.errors|length > 0 %}
            <ul class="flash-error">
              {% for error in registrationForm.lastName.vars.errors %}
                <li>{{ error.message }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          {# Email #}
          {{ form_label(registrationForm.email, null, {
              'attr': {
                  'class': 'form-label',
                  'style': 'display: block; margin: 8px 0; font-weight: 500; color: var(--text-light);'
              }
          }) }}
          {{ form_widget(registrationForm.email, {
              'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}
          }) }}
          {% if registrationForm.email.vars.errors|length > 0 %}
            <ul class="flash-error">
              {% for error in registrationForm.email.vars.errors %}
                <li>{{ error.message }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          {# Password #}
          {{ form_label(registrationForm.plainPassword.first, null, {
              'label': 'Mot de passe',
              'attr': {
                  'class': 'form-label',
                  'style': 'display: block; margin: 8px 0; font-weight: 500; color: var(--text-light);'
              }
          }) }}
          {{ form_widget(registrationForm.plainPassword.first, {
              'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}
          }) }}
          {% if registrationForm.plainPassword.first.vars.errors|length > 0 %}
            <ul class="flash-error">
              {% for error in registrationForm.plainPassword.first.vars.errors %}
                <li>{{ error.message }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          {# Password Confirmation #}
          {{ form_label(registrationForm.plainPassword.second, null, {
              'label': 'Confirmer le mot de passe',
              'attr': {
                  'class': 'form-label',
                  'style': 'display: block; margin: 16px 8px 0 0; font-weight: 500; color: var(--text-light);'
              }
          }) }}
          {{ form_widget(registrationForm.plainPassword.second, {
              'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}
          }) }}
          {% if registrationForm.plainPassword.second.vars.errors|length > 0 %}
            <ul class="flash-error">
              {% for error in registrationForm.plainPassword.second.vars.errors %}
                <li>{{ error.message }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          <button type="submit" class="btn btn-green" style="width: 100%; margin-top:30px;">S’inscrire</button>

          {{ form_end(registrationForm) }}

          <div class="auth-footer" style="margin-top: 15px;">
            Vous avez déjà un compte ?
            <a href="{{ path('app_login') }}" class="auth-link">Se connecter</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
